*
  box-sizing border-box

body
  font-size 16px
  color $text-default
  padding 0
  margin 0

.page-title
  text-align center

.content-container
  margin-left auto
  margin-right auto
  padding-left 15px
  padding-right 15px

h1
h2
h3
h4
h5
  color $text-default
  font-weight 700
  text-transform uppercase
  margin-top 0.5em
  margin-bottom 1em

h1
  font-size 2.5em
h2
  font-size 2em
h3
  font-size 1.4em
h4
  font-size 1em
h5
  font-size 0.8em

.-invisible
  position absolute !important
  clip rect(1px 1px 1px 1px)
  clip rect(1px,1px,1px,1px)
  overflow: hidden
  height: 1px

a
  text-decoration none
  &:hover
    text-decoration underline