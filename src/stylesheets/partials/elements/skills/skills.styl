.skills
  text-align center
  &__item
    margin-bottom 1em
    display inline-block
    &_separator
      display block
      width 100%
    &_popup
      .skill-level
        cursor pointer
    &-container
      &_active
        position fixed
        top 0
        left 0
        overflow-x hidden
        overflow-y auto
        width 100%
        height 100%
        -webkit-overflow-scrolling touch
        background-color rgba(0,0,0,0.75)
        z-index 100
        .skill-level
          margin 50px auto 0
          width 90%
          height auto
          max-width $bp-medium - 92px
          background-color $white
          border-radius 5px 5px 0 0
          padding 15px 15px 0
          cursor default
          .skill-close
            display block
            position absolute
            z-index 10
            top 0
            right 0
            padding 15px
            cursor pointer
            color $grey-dark
            font-size 20px
            line-height 20px
            &:before
              content '\2716'
          figcaption
            display none
          svg
            display none
          .icon
            position relative
            margin 0 auto
            width 150px
            height 150px
            top auto
            left auto
            background-size 150px auto
          &:hover
            &:after
              content ''
              display none
      &_closed
        .skill-info
          display none
  h2
    span
      font-size 0.65em
      color $text-light
      font-weight 300
      text-transform none
      white-space nowrap

.skill-level
  position relative
  color $grey-light
  font-size 20px
  text-align center
  margin 0 10px 10px
  figcaption
    border-radius 50%
    border 10px solid $grey-dark
    font-size 10px
    line-height 80px
    width 100px
    height 100px
    text-indent 200%
    white-space nowrap
    overflow hidden
  .icon
    position absolute
    width 50px
    height 50px
    top 50%
    left 50%
    margin-top -25px
    margin-left -25px
    background-size 50px auto
    &_html
      @extends $partials--elements--skills--html5
    &_css
      @extends $partials--elements--skills--css3
    &_js
      @extends $partials--elements--skills--js
    &_drupal
      @extends $partials--elements--skills--drupal
    &_drupal8
      @extends $partials--elements--skills--drupal8
    &_angular
      @extends $partials--elements--skills--angular
    &_jquery
      @extends $partials--elements--skills--jquery
    &_gulp
      @extends $partials--elements--skills--gulp
    &_sass
      @extends $partials--elements--skills--sass
    &_git
      @extends $partials--elements--skills--git
    &_mocha
      @extends $partials--elements--skills--mocha
    &_babel
      @extends $partials--elements--skills--babel
    &_webpack
      @extends $partials--elements--skills--webpack
    &_php
      @extends $partials--elements--skills--php
    &_mysql
      @extends $partials--elements--skills--mysql
    &_nodejs
      @extends $partials--elements--skills--nodejs
    &_stylus
      @extends $partials--elements--skills--stylus
    &_phpstorm
      @extends $partials--elements--skills--phpstorm
    &_webstorm
      @extends $partials--elements--skills--webstorm
    &_notepad
      @extends $partials--elements--skills--notepad
    &_ps
      @extends $partials--elements--skills--ps
    &_ai
      @extends $partials--elements--skills--ai
    &_sourcetree
      @extends $partials--elements--skills--sourcetree
    &_linux
      @extends $partials--elements--skills--linux
    &_wordpress
      @extends $partials--elements--skills--wordpress
    &_bem
      @extends $partials--elements--skills--bem
    &_en
      @extends $partials--elements--skills--en
  svg
    position absolute
    top 0
    left 0
    circle
      stroke $orange-light
      fill transparent
      stroke-width 10
      stroke-dashoffset 0
      transition: stroke-dashoffset 1s linear;
  .skill-close
    display none
  &:hover
    svg
      circle
        stroke-dashoffset 0 !important
    &:after
      display block
      color $text-white
      background-color rgba(0, 0, 0, 0.7)
      padding 3px 5px
      border-radius 3px
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      content attr(data-name)' ~'attr(data-percent)'%'
      font-size 10px

.skill-info
  position relative
  width 90%
  height auto
  max-width $bp-medium - 92px
  background-color $white
  border-radius 0 0 5px 5px
  padding 15px
  margin 0 auto 30px
  &__item
    text-align left
    margin-bottom 2em
    h3
      text-align center
    a
    a:visited
      color $red
      &:hover
      &:active
      &:focus
        color $red-dark
    ul
      padding 0
      margin 0 0 0.5em
    li
      list-style none
    &_sources
      ul
        padding-left 20px
      li
        list-style square
    &_goals
      ul
        padding-left 20px
      li
        list-style circle

.skill-exp
  &__item
    margin-bottom 1em
    &-caption
      margin-bottom 0.5em
      border-bottom 2px solid $green-light
      span
        font-weight bold
        color $grey-dark
    &-body
      padding 10px